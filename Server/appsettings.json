{
  "ConnectionStrings": {
    "DefaultConnection": "Host=wishlist-database;Port=5432;Database=wishlist;Username=postgres;Password=postgres"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../logs/server.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u4}] {Username} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
